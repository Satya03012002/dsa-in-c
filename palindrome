
int main()
{
   char str[20];
   int i,l;
   printf("enter a string\n");
   gets(str);
   l=strlen(str);
   printf("the length of string is %d\n",l);
   for(i=0;i<l/2;i++)
   {
       if(str[i]!=str[l-1-i])
       {
           printf("not a palindrome\n");
           break;
          
       }
       
   }
   if(i==l/2)
   {
       printf("the string is palindrome");
   }
  
    return 0;
}
